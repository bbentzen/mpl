def pos_tt_exists_wlrd_tt {M : (ğ“¦ â¸´ ğ“¡ â¸´ ğ“¿) Ïƒ} {w : ctx Ïƒ} {p : form Ïƒ} : 
  (Mâ¦ƒâ—‡pâ¦„w) = tt â‡’ (âˆƒ v, w âˆˆ (ğ“¦ â–¹ M) âˆ§ v âˆˆ (ğ“¦ â–¹ M) âˆ§ (ğ“¡ â–¹ M) w v = tt âˆ§ (Mâ¦ƒpâ¦„v) = tt) := 
begin
  unfold form_tt_in_wrld,
    simp, intro h, apply by_contradiction, intro hn,
    have nh : âˆ€ v, w âˆˆ M.wrlds â†’ v âˆˆ M.wrlds â†’ M.access w v = tt â†’ _ â‰  tt :=
      begin
        intros v wmem vmem rwv ptt,
        apply hn,
          apply exists.intro,
            apply and.intro,
              assumption, apply and.intro,
                exact vmem, apply and.intro,
                assumption, assumption
      end,
    apply h,
      intros v wmem vmem rwv,
        apply eq_ff_of_not_eq_tt,
          apply nh, repeat {assumption}
end

