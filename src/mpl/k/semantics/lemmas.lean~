/- more general facts -/ 

def ctx_tt_to_mem_tt {Î“ : ctx Ïƒ} {M : (ğ“¦ â¸´ ğ“¡ â¸´ ğ“¿) Ïƒ} {w : ctx Ïƒ} {p : form Ïƒ} : 
  (Mâ¦ƒÎ“â¦„w) = tt â‡’ p âˆˆ Î“ â‡’ (Mâ¦ƒpâ¦„w) = tt :=
begin
  intros h memp, induction Î“, revert memp, simp,
  cases memp,
    induction memp, apply and.elim_right, apply cons_ctx_tt_iff_and.1 h,
    apply Î“_ih, apply and.elim_left, apply cons_ctx_tt_iff_and.1 h, exact memp
end

def ctx_tt_to_subctx_tt {Î“ Î” : ctx Ïƒ} {M : (ğ“¦ â¸´ ğ“¡ â¸´ ğ“¿) Ïƒ} {w : ctx Ïƒ} : 
  (Mâ¦ƒÎ“â¦„w) = tt â‡’ Î” âŠ† Î“ â‡’ (Mâ¦ƒÎ”â¦„w) = tt :=
begin
  intros h s,
  induction Î”,
    reflexivity,
    unfold ctx_tt_in_wrld, simp at *, split,
      apply Î”_ih, apply sub_cons_is_sub s,
      apply ctx_tt_to_mem_tt h,
        apply s trivial_mem_left
end

def mem_tt_to_ctx_tt (Î“ : ctx Ïƒ) {M : (ğ“¦ â¸´ ğ“¡ â¸´ ğ“¿) Ïƒ} {w : ctx Ïƒ}  : 
 (âˆ€ (p : form Ïƒ) (h : p âˆˆ Î“), (Mâ¦ƒpâ¦„w) = tt) â‡’ (Mâ¦ƒÎ“â¦„w) = tt :=
begin
  intro, induction Î“,
    reflexivity,
    unfold ctx_tt_in_wrld, simp at *, split,
      apply Î“_ih,
        intros p pmem, apply a,
        apply or.intro_right, exact pmem,
      apply a,
        apply or.intro_left, reflexivity  
end
